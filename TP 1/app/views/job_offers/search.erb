<table>
	<tr>
		<th>Title</th>
		<th>Location</th>
		<th>Description</th>
    <th>Remuneration</th>
		<th>Actions</th>
	</tr>
	<% @offers.each do | offer| %>

	<tr>
		<td>
			<%= offer.title %>
		</td>
		<td>
			<%= offer.location %>
		</td>
		<td>
			<%= offer.description %>
		</td>
    <td>
      <%= offer.remuneration == 0 ? 'Not Specified' : offer.remuneration %>
    </td>
		<td>
			<%= link_to 'Apply', url_for(:job_offers, :apply, :offer_id => offer.id) %>
		</td>		
	</tr>

  <% end %>

</table>
